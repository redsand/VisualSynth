{
  "name": "visualsynth",
  "productName": "VisualSynth",
  "version": "0.9.0",
  "description": "Realtime audio + MIDI reactive visual synthesizer.",
  "main": "dist/main/main/main.js",
  "author": "Note Sniffer",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"tsc -w -p tsconfig.main.json\" \"node scripts/build-renderer.js --watch\" \"wait-on dist/main/main/main.js && electron .\"",
    "prepare:assets": "node scripts/prepare-assets.js",
    "build": "npm run prepare:assets && tsc -p tsconfig.main.json && node scripts/build-renderer.js",
    "verify:packaging": "node scripts/verify-packaging.js",
    "dist": "npm run verify:packaging && npm run build && electron-builder",
    "test": "vitest run",
    "screenshots:generate": "node scripts/generate-visual-screenshots.js",
    "screenshots:all": "node scripts/generate-visual-screenshots.js --all",
    "screenshots:clean": "node scripts/generate-visual-screenshots.js --clean",
    "screenshots:list": "node scripts/generate-visual-screenshots.js --list",
    "screenshots:ui-modes": "node scripts/generate-visual-screenshots.js --category ui-modes",
    "screenshots:generators": "node scripts/generate-visual-screenshots.js --category generators",
    "screenshots:effects": "node scripts/generate-visual-screenshots.js --category effects",
    "screenshots:test": "npm test -- screenshot.test.ts",
    "presets:migrate": "ts-node scripts/migrate-presets.ts"
  },
  "build": {
    "appId": "com.visualsynth.app",
    "productName": "VisualSynth",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/presets",
        "to": "presets"
      },
      {
        "from": "assets/templates",
        "to": "templates"
      },
      {
        "from": "showcase-performance.project.json",
        "to": "projects/showcase-performance.project.json"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/visualsynth_logo.ico",
      "publisherName": "Redsand Networks"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/visualsynth_logo.ico",
      "uninstallerIcon": "resources/visualsynth_logo.ico",
      "installerHeaderIcon": "resources/visualsynth_logo.ico",
      "shortcutName": "VisualSynth",
      "uninstallDisplayName": "VisualSynth",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "perMachine": true
    },
    "publish": null
  },
  "dependencies": {
    "midi": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "jsdom": "^27.4.0",
    "puppeteer": "^24.36.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^1.5.0",
    "wait-on": "^7.2.0"
  }
}
